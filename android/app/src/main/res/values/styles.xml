<resources>
    <style name="TextAppearance.DistCapsule.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.DistCapsule.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="fontFamily">@font/handlee_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_muted</item>
    </style>

    <style name="TextAppearance.DistCapsule.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="fontFamily">@font/handlee_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.DistCapsule.CaptureTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="fontFamily">@font/handlee_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.DistCapsule.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="fontFamily">@font/handlee_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="Widget.DistCapsule.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline_soft</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
    </style>

    <style name="Widget.DistCapsule.ButtonTonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/button_tonal_bg</item>
        <item name="android:textColor">@color/button_tonal_text</item>
        <item name="android:fontFamily">@font/handlee_regular</item>
        <item name="fontFamily">@font/handlee_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
